<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.researchhero"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.android.researchhero.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android.researchhero.LearnMenu.LearnActivity"
            android:label="Learn"
            android:parentActivityName="com.example.android.researchhero.MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="com.example.android.researchhero.LearnToResearch.ResearchMethodActivity"
            android:label="Research Method"
            android:parentActivityName="com.example.android.researchhero.LearnMenu.LearnActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LearnMenu.LearnActivity" />
        </activity>
        <activity
            android:name="com.example.android.researchhero.LearnToResearch.LearnResearchTopicActivity"
            android:label="Learn Research Topic"
            android:parentActivityName="com.example.android.researchhero.LearnToResearch.ResearchMethodActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LearnToResearch.ResearchMethodActivity" />
        </activity>
        <activity
            android:name="com.example.android.researchhero.LearnToResearch.ResearchTopicLessonOneActivity"
            android:label="ResearchTopicLessonOne" />
        <activity
            android:name="com.example.android.researchhero.LearnToResearch.ResearchTopicQuizOneActivity"
            android:label="ResearchTopicQuizOne" />
        <activity
            android:name="com.example.android.researchhero.LearnPublishingResearchActivity"
            android:label="Publish Research" />
        <activity
            android:name="com.example.android.researchhero.LearnToResearch.LearnResearchPurposeActivity"
            android:label="Research Purpose" />
        <activity
            android:name="com.example.android.researchhero.LearnToResearch.LearnResearchQuestionActivity"
            android:label="Research Question" />
        <activity
            android:name="com.example.android.researchhero.LearnToResearch.LearnHypothesisActivity"
            android:label="Hypothesis" />
        <activity
            android:name="com.example.android.researchhero.LearnToResearch.LearnExperimentActivity"
            android:label="Experiment" />
        <activity
            android:name="com.example.android.researchhero.LearnToResearch.LearnAnalysisActivity"
            android:label="Analysis" />
        <activity
            android:name="com.example.android.researchhero.LearnToResearch.LearnConclusionActivity"
            android:label="Conclusion" />
        <activity
            android:name="com.example.android.researchhero.AboutUsActivity"
            android:label="About Us"
            android:parentActivityName="com.example.android.researchhero.MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
    </application>

</manifest>