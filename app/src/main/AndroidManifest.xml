<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.researchhero">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LearnMenu.LearnActivity"
            android:label="Learn" />
        <activity
            android:name=".LearnToResearch.ResearchMethodActivity"
            android:label="ResearchMethod" />
        <activity
            android:name=".LearnToResearch.LearnResearchTopic"
            android:label="LearnResearchTopic" />
        <activity
            android:name=".LearnToResearch.ResearchTopicLessonOne"
            android:label="ResearchTopicLessonOne" />
        <activity
            android:name=".LearnToResearch.ResearchTopicQuizOne"
            android:label="ResearchTopicQuizOne" />

    </application>

</manifest>