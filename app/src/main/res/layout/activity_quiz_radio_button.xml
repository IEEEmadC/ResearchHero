<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question: \nScientific research is Only limited to just subjects like biology, chemistry, and physics."
        android:textColor="#000000"
        android:textSize="24sp"
        android:padding="16dp"/>

    <RadioGroup
        android:layout_below="@id/question_text_view"
        android:id="@+id/quiz_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#bdbdbd">

    <RadioButton
        android:id="@+id/radio_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/radio_yes"
        android:background="#e0e0e0"/>

    <RadioButton
        android:id="@+id/radio_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/radio_no"
        android:background="#e0e0e0"/>
    </RadioGroup>

    <Button
        android:layout_below="@id/quiz_radio_group"
        android:id="@+id/radio_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"/>
</RelativeLayout>